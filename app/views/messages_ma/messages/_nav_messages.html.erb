<div class="message_nav ui-tabs-nav ui-corner-all">
  <ul>
    <li class="<%= 'active' if request.fullpath =~ /messages(\/\d+)?\z/ && !@chain_archived %>"><%= link_to 'Входящие', messages_ma.messages_path %></li>
    <li class="<%= 'active' if request.fullpath =~ /messages\/(\d+\/.*)?sent/ %>"><%= link_to 'Отправленные', messages_ma.sent_messages_path %></li>
    <li class="<%= 'active' if request.fullpath =~ /messages\/w_instructors/ %>">
    <%= link_to 'Переписка с инструкторами', messages_ma.w_instructors_messages_path %></li>
    <li class="<%= 'active' if request.fullpath =~ /messages\/archive/ || @chain_archived %>"><%= link_to 'Архив', messages_ma.archive_messages_path %></li>
  </ul>
</div>
