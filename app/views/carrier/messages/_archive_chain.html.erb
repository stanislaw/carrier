<% if chain.archived_for?(current_user) %>
<%= b raw(t 'views.simple_messages.thread_archived') %>  
<%= link_to raw(t 'views.simple_messages.unarchive_link'), unarchive_chain_path(:chain_id => chain, :user_id => current_user), :remote => true, :method => :post %>
<% else %>
<%= link_to raw(t 'views.simple_messages.archive_link'), archive_chain_path(:chain_id => chain, :user_id => current_user), :remote => true, :method => :post %>
<% end %>
