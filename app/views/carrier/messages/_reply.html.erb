<%= form_for(@message, :url => carrier.messages_path, :remote => true) do |f| %>
  
  <%= error_messages_for @message %>  

  <div class="carrier_message_new_wrapper replay_carrier_message">
    <h4><span class=""><%= current_user.username %></span> &rArr; <span class="red"><%= @message.recipients_names %></span></h4>
    <div class="field">
      <%= f.label :content, t('views.carrier.reply_content') %><br />
      <%= f.text_area :content, :rows => 6 %>
    </div>

    <%= f.hidden_field :recipients_ids %>
    <%= f.hidden_field :chain_id %>
    <%= f.hidden_field :sender %>
    <%= f.hidden_field :answers_to %>
    <%= f.hidden_field :subject %>

    <div class="actions">
      <%= f.submit t('views.carrier.reply_send') %>
    </div>
  </div>
<% end %>
